<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/ic_voit"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <TextView
            android:id="@+id/tv_orangecolor"
            android:textColor="@color/orange"
            android:layout_marginStart="116dp"
            android:text="Нажать"
            app:layout_constraintTop_toBottomOf="@id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_forget"
            android:text="Забыл Пароль"
            android:textColor="@color/white"
            android:layout_marginEnd="126dp"
            app:layout_constraintTop_toBottomOf="@id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:backgroundTint="@color/black"
            android:id="@+id/button"
            android:textSize="12sp"
            android:text="ВОЙТИ"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/et_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="238dp"
            android:layout_height="50dp"/>


        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_password"
            android:textSize="12sp"
            android:paddingStart="20dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/ic_launcher_background"
            android:textColorHint="@color/black"
            android:hint="Введите пароль"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/et_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="238dp"
            android:layout_height="50dp"/>

        <EditText
            android:id="@+id/et_email"
            android:textSize="12sp"
            android:paddingStart="20dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/ic_launcher_background"
            android:textColorHint="@color/black"
            android:hint="Введите вашу почту"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/tv_register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="238dp"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/tv_register"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:text="Или зарегиструйтесь"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tv_makevhod"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_makevhod"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:text="Выполните вход"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_welcome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_welcome"
            android:textSize="34sp"
            android:textColor="@color/white"
            android:text="добро пожаловать"
            android:layout_marginBottom="74dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_vhod"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:text="ВХОД"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>